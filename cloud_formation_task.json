{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "This template is for VPC",

    "Parameters": {
        "KeyName": {
            "Description": "This key is used for ssh into EC2 instance",
            "Type": "AWS::EC2::KeyPair::KeyName"
        },
        "LatestAmiId": {
            "Type": "AWS::SSM::Parameter::Value<AWS::EC2::Image::Id>", 
            "Default": "/aws/service/ami-amazon-linux-latest/amzn2-ami-hvm-x86_64-gp2"
        }
    },

    "Resources" : {
        "vpc1" : {
            "Type" : "AWS::EC2::VPC",
            "Properties" : {
                "Tags" : [{"Key": "Name", "Value":"test-vpc1"}],
                "CidrBlock" : "10.0.0.0/16",
                "EnableDnsHostnames" : true,
                "EnableDnsSupport" : true,
                "InstanceTenancy" : "default"
            }
        },

        "Vpc1PublicSubnet" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "Tags" : [{"Key" : "Name", "Value" : "Public-Subnet-1"}],
                "VpcId" : {"Ref" : "vpc1"},
                "AvailabilityZone" : {"Fn::Select" : ["0",{"Fn::GetAZs" : ""}]},
                "CidrBlock" : "10.0.0.0/24",
                "MapPublicIpOnLaunch" : true
            }
        },

        "Vpc1PrivateSubnet" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "Tags" : [{"Key" : "Name", "Value" : "Private-Subnet-1"}],
                "VpcId" : {"Ref" : "vpc1"},
                "AvailabilityZone" : {"Fn::Select" : ["0",{"Fn::GetAZs" : ""}]},
                "CidrBlock" : "10.0.1.0/24",
                "MapPublicIpOnLaunch" : false

            }
        },

        "Vpc1Igw" : {
            "Type" : "AWS::EC2::InternetGateway",
            "DependsOn" : "vpc1",
            "Properties" : {
                "Tags" :[{"Key":"Name", "Value":"Vpc1-IGW"}]
            }
        },
        "IgwAttachmentVpc1" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
                "InternetGatewayId" : {"Ref" : "Vpc1Igw"},
                "VpcId" : {"Ref":"vpc1"}
            }
        },
        "Vpc1RouteTable" : {
            "Type": "AWS::EC2::RouteTable",
            "Properties" : {
                "Tags" :[{"Key":"Name", "Value": "Vpc1-Public-RT"}],
                "VpcId" :{"Ref":"vpc1"}
            }
        },
        "RTPublicRoute" : {
            "Type" :"AWS::EC2::Route",
            "DependsOn" : "IgwAttachmentVpc1",
            "Properties" : {
                "DestinationCidrBlock" : "0.0.0.0/0",
                "GatewayId" : {"Ref":"Vpc1Igw"},
                "RouteTableId" : {"Ref":"Vpc1RouteTable"}
              }
        },
        "vpc2" : {
            "Type" : "AWS::EC2::VPC",
            "Properties" : {
                "Tags" : [{"Key": "Name", "Value":"test-vpc2"}],
                "CidrBlock" : "10.1.0.0/16",
                "EnableDnsHostnames" : true,
                "EnableDnsSupport" : true,
                "InstanceTenancy" : "default"
            }

        },
        "Vpc2PublicSubnet" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "Tags" : [{"Key" : "Name", "Value" : "Public-Subnet-2"}],
                "VpcId" : {"Ref" : "vpc2"},
                "AvailabilityZone" : {"Fn::Select" : ["0",{"Fn::GetAZs" : ""}]},
                "CidrBlock" : "10.1.0.0/24",
                "MapPublicIpOnLaunch" : true

            }
        },
        "Vpc2PrivateSubnet" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "Tags" : [{"Key" : "Name", "Value" : "Private-Subnet-2"}],
                "VpcId" : {"Ref" : "vpc2"},
                "AvailabilityZone" : {"Fn::Select" : ["0",{"Fn::GetAZs" : ""}]},
                "CidrBlock" : "10.1.1.0/24",
                "MapPublicIpOnLaunch" : false

            }
        },
        "Vpc2Igw" : {
            "Type" : "AWS::EC2::InternetGateway",
            "DependsOn" :"vpc2",
            "Properties" : {
                "Tags" :[{"Key":"Name", "Value":"Vpc2-IGW"}]
            }
        },
        "IgwAttachmentVpc2" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
                "InternetGatewayId" : {"Ref" : "Vpc2Igw"},
                "VpcId" : {"Ref":"vpc2"}
            }
        }
    }
}